        <!-- Apps -->
        <div id="vf-page" class="slds">
            <div ng-app="myApp">
                <div class="slds-grid">
                    <nav class="slds-col slds-size--2-of-12 sideMenu">
                        <c:Summer16ApexDemoNavi />
                    </nav>
                    <main class="slds-col slds-size--10-of-12">
